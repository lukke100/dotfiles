Config
  { font          = "xft:Terminus (TTF)-9"
  , fgColor       = "#ffffff"
  , bgColor       = "#404040"
  , position      = TopP 24 24
  , border        = NoBorder
  , lowerOnStart  = True
  , commands      =
    [ Run StdinReader
    , Run Date "<fc=#8667e0>%a %h %d %r</fc>" "date" 10
    ]
  , sepChar   = "%"
  , alignSep  = "}{"
  , template  = "%StdinReader% }{ %date% "
  }
