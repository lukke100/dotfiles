<?xml version="1.0" encoding="UTF-8"?>
<lkk:template xmlns:lkk="http://www.github.com/lukke100">
  <lkk:declare name="color-bkg"           value="404040"/>
  <lkk:declare name="color-bkg-text"      value="dbdbdb"/>
  <lkk:declare name="color-act"           value="7c60bf"/>
  <lkk:declare name="color-act-text"      value="ececec"/>
  <lkk:declare name="color-urg"           value="dc322f"/>
  <lkk:declare name="color-urg-text"      value="ececec"/>

  <!--
    NOTE: Currently, the RGBA color format is used for "color-term" for 256
    distinct alpha values. The alternative, hex codes preceded by "[XX]", only
    offer ~100 distinct values mapping erratically to the 8 bit alpha channel.
    For consistency, "color-term-text" also uses the  RGBA format.

    Generally, one should only place /repeated/ text strings into this text
    file. However, these RGBA values should generally be changed alongside other
    color values. So, we leave these here for convenience.
  -->

  <lkk:declare name="color-term"          value="rgba:4925/4925/4925/e000"/>
  <lkk:declare name="color-term-text"     value="rgba:db00/db00/db00/ffff"/>

  <!--
    NOTE: As "color-term" and "color-term-text" are only used by URxvt,
    "color-shadow-*" options are used only by compton. Despite that, they're
    placed here because they should be changed alongside "color-bkg".
  -->

  <lkk:declare name="color-shadow-red"    value="0.25"/>
  <lkk:declare name="color-shadow-green"  value="0.25"/>
  <lkk:declare name="color-shadow-blue"   value="0.25"/>

  <lkk:declare name="color-act-alt1"      value="ffb671"/>
  <lkk:declare name="color-act-alt2"      value="bdef6a"/>

  <lkk:declare name="color-black"         value="35313b"/>
  <lkk:declare name="color-red"           value="885163"/>
  <lkk:declare name="color-green"         value="5c845b"/>
  <lkk:declare name="color-yellow"        value="887d5b"/>
  <lkk:declare name="color-blue"          value="55598e"/>
  <lkk:declare name="color-magenta"       value="81518e"/>
  <lkk:declare name="color-cyan"          value="558487"/>
  <lkk:declare name="color-white"         value="aeaab4"/>

  <lkk:declare name="color-light-black"   value="4f4c56"/>
  <lkk:declare name="color-light-red"     value="b98898"/>
  <lkk:declare name="color-light-green"   value="92b692"/>
  <lkk:declare name="color-light-yellow"  value="b9af92"/>
  <lkk:declare name="color-light-blue"    value="8c8ec0"/>
  <lkk:declare name="color-light-magenta" value="b388c0"/>
  <lkk:declare name="color-light-cyan"    value="8cb6b9"/>
  <lkk:declare name="color-light-white"   value="d0cdd7"/>
</lkk:template>
