#!/bin/sh
if [ -n "$KSH_VERSION" ]
then
	. /etc/ksh.kshrc
fi

lsalias='ls -Alp'
cdalias='_cdls() { "cd" "$@" && "ls" -p'

if [ -x /usr/bin/dircolors ]
then
	eval "$(dircolors -b)"
	lsalias="$lsalias --color=auto"
	cdalias="$cdalias --color=auto"
fi

if 'ls' --group-directories-first -d . >/dev/null 2>&1
then
	lsalias="$lsalias --group-directories-first"
	cdalias="$cdalias --group-directories-first"
fi

eval "alias ls='$lsalias'"
eval "alias cd='$cdalias; }; _cdls'"
