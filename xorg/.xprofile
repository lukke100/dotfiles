#!/usr/bin/env sh
# shellcheck disable=SC1090

if [ -d /etc/X11/xinit/xinitrc.d ]
then
  for X11_FILE in /etc/X11/xinit/xinitrc.d/*
  do
    [ -x "$X11_FILE" ] && . "$X11_FILE"
  done

  unset X11_FILE
fi

# pidof conky    || conky &

if ! systemd-detect-virt --quiet
then
  pidof compton  || compton --blur-background --blur-background-frame &
  pidof redshift || redshift -l 45.0:-75.0 &
else
  pidof compton  || compton &
fi

dex -a -e xmonad
wmname LG3D
xrdb -load ~/.Xresources
xset r rate 200 30
xset m 0 0
xsetroot -cursor_name left_ptr
~/.fehbg
