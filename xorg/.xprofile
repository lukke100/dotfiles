#!/bin/bash
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

xrdb -load ~/.Xresources
xsetroot -cursor_name left_ptr
~/.fehbg
(pidof compton)   || compton &
(pidof redshift)  || redshift -l 45.0:-75.0 &
# (pidof unclutter) || unclutter -idle 4 -noevents & # "-noevents" prevents issues with Firefox
xset r rate 200 30
wmname LG3D
dex -a -e xmonad
rofi &
(pidof conky) || conky &
