#!/bin/sh
# shellcheck disable=SC1090

if [ -d /etc/X11/xinit/xinitrc.d ]
then
  for X11_FILE in /etc/X11/xinit/xinitrc.d/*
  do
    [ -x "$X11_FILE" ] && . "$X11_FILE"
  done

  unset X11_FILE
fi

pidof compton  || compton &
pidof conky    || conky &
pidof redshift || redshift -l 45.0:-75.0 &
pidof rofi     || rofi &

~/.fehbg
dex -a -e xmonad
wmname LG3D
xrdb -load ~/.Xresources
xset r rate 200 30
xsetroot -cursor_name left_ptr
