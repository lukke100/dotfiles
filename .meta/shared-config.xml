<?xml version="1.0" encoding="UTF-8"?>
<lkk:template xmlns:lkk="http://www.github.com/lukke100">
  <lkk:declare name="color-bkg"           value="ffffff"/>
  <lkk:declare name="color-bkg-text"      value="000000"/>
  <lkk:declare name="color-act"           value="d79fcf"/>
  <lkk:declare name="color-act-text"      value="000000"/>
  <lkk:declare name="color-urg"           value="dc322f"/>
  <lkk:declare name="color-urg-text"      value="ececec"/>

  <lkk:declare name="color-bkg2"          value="606060"/>

  <lkk:declare name="color-act2"          value="34e49e"/>
  <lkk:declare name="color-act3"          value="9e34e4"/>

  <!--
    NOTE: Currently, the RGBA color format is used for "color-term" for 256
    distinct alpha values. The alternative, hex codes preceded by "[XX]", only
    offer ~100 distinct values mapping erratically to the 8 bit alpha channel.
    For consistency, "color-term-text" also uses the  RGBA format.

    Generally, one should only place /repeated/ text strings into this text
    file. However, these RGBA values should generally be changed alongside other
    color values. So, we leave these here for convenience.
  -->

  <lkk:declare name="color-term"          value="rgba:ffff/ffff/ffff/cfff"/>
  <lkk:declare name="color-term-text"     value="rgba:0000/0000/0000/ffff"/>

  <!--
    NOTE: As "color-term" and "color-term-text" are only used by URxvt,
    "color-shadow-*" options are used only by compton. Despite that, they're
    placed here because they should be changed alongside "color-bkg".
  -->

  <lkk:declare name="color-shadow-red"    value="1.0"/>
  <lkk:declare name="color-shadow-green"  value="1.0"/>
  <lkk:declare name="color-shadow-blue"   value="1.0"/>

  <lkk:declare name="color-black"         value="000000"/>
  <lkk:declare name="color-red"           value="7e1741"/>
  <lkk:declare name="color-green"         value="1b511d"/>
  <lkk:declare name="color-yellow"        value="6d2717"/>
  <lkk:declare name="color-blue"          value="511da3"/>
  <lkk:declare name="color-magenta"       value="6b1970"/>
  <lkk:declare name="color-cyan"          value="443879"/>
  <lkk:declare name="color-white"         value="bfbfbf"/>

  <lkk:declare name="color-light-black"   value="7f7f7f"/>
  <lkk:declare name="color-light-red"     value="e65e62"/>
  <lkk:declare name="color-light-green"   value="569d1c"/>
  <lkk:declare name="color-light-yellow"  value="c27a2c"/>
  <lkk:declare name="color-light-blue"    value="7d81db"/>
  <lkk:declare name="color-light-magenta" value="d35aca"/>
  <lkk:declare name="color-light-cyan"    value="66964f"/>
  <lkk:declare name="color-light-white"   value="ffffff"/>
</lkk:template>
