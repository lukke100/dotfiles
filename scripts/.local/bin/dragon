#!/bin/sh -eu
export CC
export CFLAGS
export LDFLAGS
export MAKEFLAGS
CC="${CC-clang}"
CFLAGS="-Wall -Wextra -Wpedantic -std=c90 ${CFLAGS-}"
CFLAGS="-DNDEBUG -flto -march=native -Oz ${CFLAGS-}"
CFLAGS="-I$HOME/.local/include/ ${CFLAGS-}"
LDFLAGS="-L$HOME/.local/lib/ -flto -s ${LDFLAGS-}"
MAKEFLAGS="-e"
exec "$@"
